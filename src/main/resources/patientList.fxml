<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Hyperlink?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.nirvan.controller.PatientTableController">
    <top>
        <Label text="Patient List" alignment="CENTER">
            <font>
                <Font name="Times New Roman Bold" size="18"/>
            </font>
        </Label>
    </top>
    <left>
        <Hyperlink text="Back To Main Window" onAction="#switchToMain" fx:id="returnToMainLink"/>
        <Hyperlink fx:id="patientRegistrationLink" text="Register New Patient" onAction="#switchToPatientRegistration"/>
    </left>
    <center>
        <AnchorPane  prefHeight="400.0" prefWidth="800.0" >
            <TableView fx:id="patientTable" layoutX="10.0" layoutY="10.0" prefHeight="380.0" prefWidth="780.0">
                <!-- Table Columns -->
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" >
                        <cellValueFactory>
                            <PropertyValueFactory property="patientId" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="nameColumn" text="Name" >
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="dobColumn" text="Date of Birth" >
                        <cellValueFactory>
                            <PropertyValueFactory property="dob" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="sexColumn" text="Sex" >
                        <cellValueFactory>
                            <PropertyValueFactory property="sex" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="typeColumn" text="Patient Type" >
                        <cellValueFactory>
                            <PropertyValueFactory property="patientType" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="treatmentColumn" text="Treatment" >
                        <cellValueFactory>
                            <PropertyValueFactory property="treatment" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="phoneColumn" text="Phone" >
                        <cellValueFactory>
                            <PropertyValueFactory property="phone" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="addressColumn" text="Address" >
                        <cellValueFactory>
                            <PropertyValueFactory property="address" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </AnchorPane>

    </center>
</BorderPane >
